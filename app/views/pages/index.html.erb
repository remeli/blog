<%= link_to "new page", new_page_path %>
<% @pages.each do |page| %>
	<%= page.name %><br />
	<%= page.permalink %><br />
	<%= page.content %><br />
	<%= link_to "show", page_path(page) %>
	<%= link_to "edit", edit_page_path(page) %>
	<%= link_to "destroy", page_path(page), :confirm => 'Вы уверены?', 
																					:method => :delete %>
<% end %>