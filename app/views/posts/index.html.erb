<div id="post">
  <p>Все статьи:</p>
  <%  @posts.each do |post| %>
  <div id="post_index_title">
	  <%= link_to(post.title, post) %><br />
	</div>
	
	<div id="post_index_description">
	  <%= trunc(post.description, 150) %>
	  <%= link_to 'Далее', post %>
  </div>
  <% end %>
  
  <div id="pagination"><%= paginate @posts %>
  </div>
</div>
