<div id="userinfo">
  <h4>Ваш профиль:</h4>
  <div class="user-actions">
    <p class="email">
      <%= current_user.email %>
    </p>
    <p class="add-post">
      <%= link_to "Добавить пост", new_post_path, :method => :get %>
    </p>
    <% if admin?(current_user) %>
      <div class="admin-link">
        <%= link_to "Админка", "" %>
      </div>
    <% end %>
    <p class="submit">
      <%= link_to "Выйти", log_out_path %>
    </p>
  </div>
</div>