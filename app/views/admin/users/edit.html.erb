<div id="add-post-from-user">
  <h1>Редактировать пользователя:</h1>
  <%= form_for [:admin, @user] do |f| %>
    <%= errors_for_object(@user) %>
    <div class="field">
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, "Пароль:" %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Повторите пароль:" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="field">
      <%= f.label :admin_true, "Админ" %>
      <%= f.radio_button :admin, true %>
      <%= f.label :admin_false, "Пользователь" %>      
      <%= f.radio_button :admin, false %>
    </div>
    <div class="button">
      <%= f.submit "Обновить" %>
    </div>
  <% end %>
</div>
