<%= form_for [:admin, @page] do |f| %>
  <%= errors_for_object(@page) %>
  <div class="field">
    <%= f.label :name, 'Название:' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :permalink, 'Прямая ссылка:' %>
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :content, 'Содержимое' %>
    <%= f.text_area :content, :style => "width:500px;height:250px;" %>
  </div>
  <div class="button">
	  <%= f.submit @page.button_value %>
  </div>
<% end %>